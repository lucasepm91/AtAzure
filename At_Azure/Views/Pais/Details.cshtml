@model At_Azure.Models.Pais

@{
    ViewData["Title"] = "Detais";
}

<h2>Detais</h2>

<div>
    <h4>Pais</h4>
    <br />
    <img src=@Html.DisplayFor(model => model.Bandeira) />
    <hr />
    <br />
    <dl class="dl-horizontal">        
        <dt style="text-align:left;">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
</div>
@if (@ViewBag.Estados != null)
{
    <h4>Estados:</h4>

    <table class="table table-hover table-striped table-responsive">
        <thead>
            <tr>
                <th>
                    Nome
                </th>                
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Estado estado in @ViewBag.Estados)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(Estado => estado.Nome)
                    </td>                    
                    <td>                        
                        @Html.ActionLink("Detalhes", "details", "estado", new { estado.Id }, null)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @Html.ActionLink("Editar país", "Edit", new { id = Model.Id }) |        
        @Html.ActionLink("Voltar para lista de países", "index", "pais", null, null)
    </div>
}
else
{
    <div>
        <div>
            <p>
                Nenhum estado cadastrado para este país.
            </p>            
            <p>
                @Html.ActionLink("Voltar para lista de países", "index", "pais", null, null)
            </p>
        </div>
    </div>
}
